<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/charCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BYN"
        android:textSize="60sp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фунт стерлингов Соединенного королевства"
        android:textSize="18sp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/charCode"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номинал: 1"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/currentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тек. цена: 16.3066 рос. руб."
        android:textSize="16sp"
        android:layout_margin="4dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nominal"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/previousValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пред. цена: 16.3066 рос. руб."
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/currentValue"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>